<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00CFCFCF"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".UI.Categories_Parent_Sub1"
    tools:openDrawer="start">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategoriesParent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:background="#F2F4FF"
        android:scrollingCache="true"
        android:layout_marginTop="5dp"
        app:layout_behavior="layout_behavior"/>

    <TextView
        android:id="@+id/txtNameProductsCategoryParent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:text="@string/all_products"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:background="#EFEFEF"/>


    <ProgressBar
        android:id="@+id/progressBarProductsCategory"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductCategoriesParent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:background="#F2F4FF"
        android:scrollingCache="true"
        app:layout_behavior="layout_behavior"/>



</LinearLayout>